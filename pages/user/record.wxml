<view class="record">
    <view class="hj">
        合计：<text class="price">{{num}}元</text>
    </view>
    <view class="record_list">
        <view class="item" wx:for="{{listData}}">
            <view class="f-left">
                <view class="name">
                    {{item.name}}
                </view>
                <view class="time">{{item.time}}</view>
            </view>
            <view class="price">
                {{item.price}}元
            </view>
        </view>
    </view>
</view>